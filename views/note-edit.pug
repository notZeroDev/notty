extends layouts/main-layout.pug
block links
  link(rel="stylesheet", href="css/note-form.css")
block content
  form(action="/note-edit", method="POST")
    .field 
      input#title(type="text", name="title",placeholder="Title" value=`${edit ? note.title : ''}`,onfocus="this.value = this.value;", autofocus)
    .field(class="note-body")
      textarea#body(name="noteBody", placeholder="Input Some Notes To Keep...") #{edit ? note.body : ''}
      input(type="hidden", name="noteId", value=`${edit ? note.id : ''}`)
    button(type="submit") #{edit ? "Edit" : "Create"}
